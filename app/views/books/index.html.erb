<h1>Books</h1>

<% @books.each do |book| %>

    <p>Title</p>
    <span>
        <%= book.title %>
    </span>
    <%= link_to "Show", show_book_path(book.id) %>
    <%= link_to "Edit", edit_book_path(book.id) %>
    <%= link_to "Delete", destroy_book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
    
<% end %>
